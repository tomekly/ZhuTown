<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/dimen_12.5"
              android:paddingRight="@dimen/dimen_16"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/framing_knowledge_recycler_img"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/hp_framing_knowledge_point"/>

        <TextView
            android:id="@+id/framing_recycler_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_12.5"
            android:layout_toRightOf="@+id/framing_knowledge_recycler_img"
            android:gravity="center_vertical"
            android:hint="雷雨天撒化肥科学吗？"
            android:textColor="@color/color_343434"
            android:textSize="@dimen/text_size_10sp"/>


        <TextView
            android:id="@+id/framing_recycler_item_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="2016-10-2"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimen_10"/>

    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:background="@color/color_dcdcdc"
    android:layout_height="1dp"/>
</LinearLayout>