<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:padding="@dimen/activity_horizontal_margin"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/warn_icon"
        android:layout_width="wrap_content"
        android:src="@mipmap/img_hp_recyclerview_item_warn"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/warnContent"
        android:layout_width="wrap_content"
        android:text="草莓光照强度高"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/warn_icon"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/warnTime"
        android:text="2015/1/1 15:23:23"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>