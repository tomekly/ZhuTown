<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
  <ImageView
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:id="@+id/expert_datebase_item_img01"
      android:src="@drawable/test"
      />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/expert_datebase_item_txt01"
            android:text="专家职称：院士"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/expert_datebase_item_txt02"
            android:text="擅长领域：农情"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/expert_datebase_item_txt03"
            android:text="个人简历：xxxxxxxxxxxx"
            />

    </LinearLayout>

</LinearLayout>
