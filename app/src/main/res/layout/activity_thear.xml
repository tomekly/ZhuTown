<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_thear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dongbang.yutian.activity.ThearActivity">

    <include layout="@layout/layout_app_bar"/>
    <View
        android:layout_below="@+id/layout_coordinator"
        android:layout_width="match_parent"
        android:id="@+id/view1"
        android:background="@color/color_afafaf"
        android:layout_height="@dimen/dimen_10"/>

    <com.dongbang.yutian.widget.CustomeRecyclerView
        android:id="@+id/recyclerViewThear"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
