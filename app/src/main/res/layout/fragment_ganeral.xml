                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载所有组织结构" />

            <Button
                android:id="@+id/bt_get_all_organs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取组织结构串" />

            <Button
                android:id="@+id/bt_get_organs_by_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分级获取组织结构" />
