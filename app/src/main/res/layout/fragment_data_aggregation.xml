<com.dongbang.yutian.widget.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_12"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/data_agg_one_spinner"
                android:layout_width="0.0dp"
                android:layout_height="@dimen/dimen_32dp"
                android:layout_weight="1.0"
                android:background="@mipmap/data_collection_bg"/>

            <Spinner
                android:id="@+id/data_agg_two_spinner"
                android:layout_width="0.0dp"
                android:layout_height="@dimen/dimen_32dp"
                android:layout_weight="1.0"
                android:background="@mipmap/data_collection_bg"/>
        </LinearLayout>

        <!--<Spinner-->
            <!--android:id="@+id/data_agg_three_spinner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dimen_32dp"-->
            <!--android:background="@mipmap/data_analysis_sp_bg"/>-->





        <android.support.v7.widget.RecyclerView
            android:id="@+id/data_agg_recycler"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</com.dongbang.yutian.widget.MyScrollView>