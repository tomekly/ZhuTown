<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"

                android:padding="@dimen/dimen_5"
              android:layout_height="wrap_content">

    <SurfaceView
        android:visibility="gone"
        android:id="@+id/item_video_list_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<ImageView
    android:id="@+id/item_video_list_startOrEnd"
    android:layout_width="match_parent"
    android:src="@mipmap/img_video_play"
    android:paddingBottom="50dp"
    android:paddingTop="50dp"
    android:visibility="gone"
    android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/item_video_list_title"
        android:layout_width="match_parent"
        android:lines="1"
        android:textSize="@dimen/text_size_18sp"
        android:text="猫王粗加工车间"
        android:textColor="@color/scan_bg"

        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_height="wrap_content"/>


    
</RelativeLayout>